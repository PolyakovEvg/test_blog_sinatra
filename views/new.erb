<div class="container">
  <%if @error then%>
    <div class="mt-1 alert alert-danger"><%=@error%></div>
  <%elsif @sucess%>
    <div class='mt-1 alert alert-success'><%=@sucess%></div>
  <%end%>
  <h1>Здесь можете написать свой пост</h1>
  <form action="/new" method="post" role="form">
    <div class="form-floating">
      <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 130px" name="text_area_message"></textarea>
      <label for="floatingTextarea2">Напишите пост</label>
    </div>
    <button type="submit" class="mt-2 btn btn-primary">Submit</button>
  </form>
</div>
