<div class="container">

<% @posts.each do |row| %>
<div class="card mt-1">
  <div class="card-header">
    От <%=row['user_name']%> в <%=row['created_date']%>
  </div>
  <div class="card-body">
    <h5 class="card-title"><%=row['title']%></h5>
    <p class="card-text"><%=row['message']%></p>
    <a href="http:/posts/<%=row['id']%>" class="btn btn-primary">Комментарии</a>
  </div>
</div>

<%end%>

</div>